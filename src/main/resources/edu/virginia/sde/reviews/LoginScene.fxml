<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.virginia.sde.reviews.LoginController"
      alignment="CENTER" spacing="12" >

    <Label text="Course Reviews Login" style="-fx-font-size: 18px;" />

    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Label fx:id="messageLabel" textFill="red" wrapText="true" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" />
        <Button text="Create Account" onAction="#handleCreateAccount" />
        <Button text="Exit" onAction="#handleExit" />
    </HBox>
</VBox>